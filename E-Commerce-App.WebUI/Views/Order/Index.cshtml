@model E_Commerce_App.WebUI.ViewModels.UserOrderViewModel
@{ Layout = "_Layout";}
<br />
<br />
<br />
<br />
<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Siparişlerim</h3>
        </div>
        <div class="card-body">
            @foreach (var item in Model.OrderItems.Zip(Model.OrderDates, Tuple.Create))
            {
                var price = item.Item1.Product.Discount > 0 ? item.Item1.Product.Price - ((item.Item1.Product.Price * item.Item1.Product.Discount) / 100) : item.Item1.Product.Price;
                <div class="p-2">
                    <div class="row">
                        <div class="col-md-3"><img src="/img/@item.Item1.Product.MainImage" width="100" height="100" /></div>
                        <div class="col-md-6">
                            <h6>@item.Item1.Product.Name</h6>
                            <h6><b>@(item.Item1.Quantity) Adet</b></h6>
                            <h6><b>@(price * item.Item1.Quantity) TL</b></h6>
                        </div>
                        <div class="col-md-3">
                            <p>@item.Item2</p>
                            <button class="btn btn-success">Değerlendir</button>
                        </div>
                    </div>
                </div>
                <hr />
            }
        </div>
    </div>
</div>