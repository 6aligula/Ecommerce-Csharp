@model E_Commerce_App.WebUI.ViewModels.UserViewModel.UserAccountViewModel
@{
    ViewData["SubPage"] = "Profil";
    ViewData["SubPageUrl"] = "Profile";
}
<div class="col-md-12">
    <!-- AREA CHART -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Bilgileri</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="col-md-12 mb-3">
                <form user-account-form method="post" asp-controller="AdminDashboard" asp-action="ProfileEdit" id="user-account-form">
                    <div class="card p-5">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <small>Ad Soyad</small>
                                <input class="form-control" placeholder="Teslim alacak kişinin adı" asp-for="@Model.FullName" />
                                <span class="text-danger" asp-validation-for="@Model.FullName"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <small>E-Mail</small>
                                <input class="form-control" placeholder="Sistemdeki email adresiniz" asp-for="@Model.Email" readonly />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <small>Yeni Şifre</small>
                                <input type="password" class="form-control" name="Password"  id="password" autocomplete="off"/>
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <small>Yeni Şifre Tekrar</small>
                                <input type="password" class="form-control" asp-for="@Model.RePassword" />
                                <span class="text-danger" asp-validation-for="@Model.RePassword"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block p-2"><b>KAYDET</b></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function () {
            $('input[type="password"]').each(function () {
                $(this).val('');
            });
        })
    </script>
}
