@model IEnumerable<E_Commerce_App.Core.Entities.Product>
@{
    ViewData["CurrentPage"] = "Ürünler";
    ViewData["CurrentPageUrl"] = "Product";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                <a href="/Admin/Product/Add"
                   class="btn btn-success text-white">Ürün Ekle</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/@item.MainImage" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @item.CreationDate
                </td>
                <td>
                    <div>
                        <a href="/Admin/Product/Edit/@item.Id" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>