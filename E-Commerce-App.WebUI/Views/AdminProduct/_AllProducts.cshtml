@{
    Layout = null;
}
@model IEnumerable<E_Commerce_App.Core.Shared.DTOs.ProductDto>
<table id="example1" class="table table-hover table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                <a href="/Admin/Product/Add"
                   class="btn btn-success text-white">Ürün Ekle</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/img/@item.MainImage" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @item.CreationDate
            </td>
            <td>
                <div>
                    <a href="/Admin/Product/Edit/@item.Id" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i>&nbsp;Düzenle</a>
                    <a class="btn btn-danger" onclick="removeProduct('@item.Id');">
                        <i class="fa fa-trash">&nbsp; Sil</i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

