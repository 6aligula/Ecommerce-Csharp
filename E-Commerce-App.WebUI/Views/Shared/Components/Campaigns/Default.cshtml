@model IEnumerable<E_Commerce_App.Core.Shared.DTOs.CampaignDto>
@{
    Layout = null;
}
@if (Model.ToList().Count > 0)
{

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{var counter = 0;}
            @foreach (var item in Model)
            {
                if (counter == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@counter" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@counter"></li>
                }

                counter++;
            }
        </ol>
        <div class="carousel-inner">
            @{counter = 0;}
            @foreach (var item in Model)
            {
                if (counter == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block img-fluid resize-image" src="~/img/@item.ImagePath" alt="@item.ImageAltTag">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block img-fluid resize-image" src="~/img/@item.ImagePath" alt="@item.ImageAltTag">
                    </div>
                }

                counter++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
<style>
    .carousel-item .img-fluid {
        width: 100%;
        height: 26em;
    }
</style>